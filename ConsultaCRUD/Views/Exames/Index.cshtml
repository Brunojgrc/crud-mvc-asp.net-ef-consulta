@model IEnumerable<ConsultaCRUD.Models.Exame>

@{
    ViewBag.Title = "SMC | Exame ";
}

<h2 style="color: Highlight" >Lista de Exames</h2>

<p>
    @Html.ActionLink("Novo Exame", "Create","", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome_ex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_ex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacao)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id_ex }, new { @class = "btn btn-info" })
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_ex }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id_ex }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
