@model IEnumerable<ConsultaCRUD.Models.Consulta>

@{
    ViewBag.Title = "SMC | Consultas ";
}

<h2  style="color: Highlight" class="title-index">Consultas Agendadas</h2>


<p>
    @Html.ActionLink("Nova Consulta", "Create", "", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.Nome_pac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exame.Nome_ex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_consulta)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.Nome_pac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Exame.Nome_ex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data_consulta)
        </td>



        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id_consulta }, new { @class = "btn btn-info" })
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_consulta }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id_consulta }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }

</table>
